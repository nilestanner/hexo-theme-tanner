.page-top.animated.fadeInDown
  .nav
    li
      if is_home()
        a.current(href="/")
          span   Home
      else
        a(href="/")
          span   Home
    li
      if is_current('about')
        a.current(href="/about")
          span   About
      else
        a(href="/about")
          span   About
    li
      if is_archive()
        a.current(href="/archives")
          span   Archive
      else
        a(href="/archives")
          span   Archive
  .information
    .back_btn
      li
        if is_post()
          a.fa.fa-chevron-left(onclick="window.history.go(-1)")
        else
          a.fa.fa-chevron-left(onclick="window.history.go(-1)",style="display:none;")
    .avatar
      a(href="/")
        img(src=theme.avatar)
